<% if @user.errors.any? %>
<div class = "alert">
  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h2>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <%= form_with model:@user, local:true do |f| %>
        <%= f.attachment_field :profile_image %>
        <label for="inputName">name</label>
        <%= f.text_field :name,autofocus: true, id:"inputName", placeholder:"name"%>
        <label for="inputIntroduction">introduction</label>
        <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"introduction" %>
      <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>
</div>
