<% if @book.errors.any? %>
<div class = "alert">
  <h2><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
    	<%= form_with model:@book, local:true do |f| %>
        <label for="inputTitle">Title</label>
        <%= f.text_field :title,autofocus: true, id:"inputTitle", placeholder:"title"%>
        <label for="inputBody">Opinion</label>
        <%= f.text_field :body, autofocus: true, id:"inputBody", placeholder:"Opinion" %>
        <%= f.submit "Update Book" %>
      <% end %>
      <%= link_to "Show",book_path(@book.id) %>
      |
      <%= link_to "Back",books_path %>
    </div>
  </div>
</div>