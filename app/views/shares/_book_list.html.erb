<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% books.each do |book| %>
  <tr>
    <td><%= link_to (attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"),user_path(book.user.id) %></td>
    <td><%= link_to book.title,book_path(book.id) %></td>
    <td><%= book.body %></td>
    <td><%= link_to "#{book.book_comments.count} コメント", book_path(book.id) %></td>
  </tr>
  <% end %>
</table>